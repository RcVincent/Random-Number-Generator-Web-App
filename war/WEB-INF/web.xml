<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  	<servlet>
  		<servlet-name>IndexServlet</servlet-name>
  		<servlet-class>vincent.ryan.c.RNG.servlet.IndexServlet</servlet-class>
  	</servlet>
 
  	<servlet>
 	 	<servlet-name> RNGServlet </servlet-name>
  		<servlet-class> vincent.ryan.c.RNG.servlet.RNGServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>LoginServlet</servlet-name>
  		<servlet-class>vincent.ryan.c.RNG.servlet.LoginServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name> AccountServlet </servlet-name>
  		<servlet-class> vincent.ryan.c.RNG.servlet.AccountServlet </servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name>CreateAccountServlet</servlet-name>
  		<servlet-class>vincent.ryan.c.RNG.servlet.CreateAccountServlet</servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name> ChangeAccountInfoServlet </servlet-name>
  		<servlet-class> vincent.ryan.c.RNG.servlet.ChangeAccountInfoServlet </servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name>HomePageServlet</servlet-name>
  		<servlet-class>vincent.ryan.c.RNG.servlet.HomePageServlet</servlet-class>
  	</servlet>
  	
  <!-- AJAX servlets -->
  <servlet> 
  	<servlet-name> RNGAjaxServlet </servlet-name>
  	<servlet-class>vincent.ryan.c.RNG.servlet.ajax.RNGAjaxServlet</servlet-class>
  </servlet>
  
  <!-- Servlet Mappings -->
  <servlet-mapping> 
  	<servlet-name> IndexServlet </servlet-name>
  	<url-pattern> index </url-pattern>
  </servlet-mapping>
 
  <servlet-mapping>
  	<servlet-name> RNGServlet</servlet-name>
  	<url-pattern>RNG </url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name> AccountServlet </servlet-name>
  	<url-pattern> your-account </url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>CreateAccountServlet</servlet-name>
  	<url-pattern>signup</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>ChangeAccountInfoServlet</servlet-name>
  	<url-pattern>account-settings</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>HomePageServlet</servlet-name>
  	<url-pattern>home</url-pattern>
  </servlet-mapping>
  
    <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>